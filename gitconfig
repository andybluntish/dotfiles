[user]
  name = Andy Stanford-Bluntish
  email = andy@bluntish.net

[github]
  user = andybluntish

[core]
  excludesfile = ~/.gitignore

[apply]
  whitespace = fix

[color]
  ui = true

[push]
  default = current

[alias]
  a = add
  ap = add --patch
  b = branch
  c = commit -v
  ca = !git add -A && git commit -av
  co = checkout
  d = diff
  dc = diff --cached
  dl = diff HEAD^
  dw = diff --color-words
  f = fetch
  l = log --pretty=oneline -n 20 --graph --abbrev-commit
  m = merge
  p = push
  pa = !"git pull; git submodule foreach git pull origin master"
  pl = pull
  s = status -s

  amend = commit --amend
  conflicts = diff --name-only --diff-filter=U
  uncommit = reset --soft HEAD^
  unstage = reset HEAD

  cb = rev-parse --symbolic-full-name --abbrev-ref HEAD
  gp = !git push --set-upstream origin HEAD:$(git cb)
  gup = !git fetch --prune origin && git rebase -p origin/$(git cb)

[merge]
  tool = vimdiff
