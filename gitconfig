[user]
  name = Andy Stanford-Bluntish
  email = andy@bluntish.net

[github]
  user = andybluntish

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes

[apply]
  whitespace = fix

[push]
  default = current

[alias]
  cb = rev-parse --symbolic-full-name --abbrev-ref HEAD
  gp = !git push --set-upstream origin HEAD:$(git cb)
  gup = !git fetch --prune origin && git rebase -p origin/$(git cb)

  a = add
  s = status -s
  l = log --pretty=oneline -n 20 --graph --abbrev-commit
  c = commit -m
  ca = !git add -A && git commit -av
  ci = commit
  amend = commit --amend

  # Pull in remote changes for the current repository and all its submodules
  p = !"git pull; git submodule foreach git pull origin master"

  # Branch
  co = checkout
  b = branch
  nb = checkout -b

  # Diff
  d = diff
  dc = diff --cached
  last = diff HEAD^
  conflicts = diff --name-only --diff-filter=U

  # Reset
  unstage = reset HEAD
  uncommit = reset --soft HEAD^

[color]
  pager = true
  ui = auto
  status = auto
  diff = auto
  branch = auto
  showBranch = auto
  interactive = auto
  grep = auto
[color "status"]
  header = black bold
  branch = cyan
  nobranch = red
  unmerged = red
  untracked = cyan
  added = green
  changed = red bold
[color "diff"]
  meta = red bold
  frag = black bold
  func = blue
  old = red strike
  new = green
  commit = blue
  whitespace = red
  context = normal
[color "branch"]
  current = cyan
  local = blue
  remote = magenta
  upstream = magenta
  plain = normal
[color "decorate"]
  branch = blue
  remoteBranch = magenta
  tag = magenta
  stash = cyan
  HEAD = blue
[color "interactive"]
  prompt = red
  header = red bold
  error = red
  help = black bold
[color "grep"]
  context = normal
  match = cyan
  filename = blue
  function = blue
  selected = normal
  separator = red bold
  linenumber = normal
