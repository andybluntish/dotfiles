[user]
  name = Andy Stanford-Bluntish
  email = andy@bluntish.net

[github]
  user = andybluntish

[core]
  excludesfile = ~/.gitignore

[apply]
  whitespace = fix

[color]
  ui = true

[push]
  default = current

[alias]
  a = add
  ap = add --patch
  b = branch
  c = commit --verbose
  ca = !git add --all && git commit --all --verbose
  co = checkout
  cp = cherry-pick
  d = diff
  dc = diff --cached
  dl = diff HEAD^
  dw = diff --color-words
  dcw = diff --cached --color-words
  f = fetch
  l = log --pretty=oneline --max-count 20 --graph --abbrev-commit
  lw = log --pretty=format:'%C(yellow)%h%Creset %Cblue%as%Creset %s' --max-count=20
  m = merge
  p = push
  pl = pull
  pla = !"git pull; git submodule foreach git pull origin master"
  s = status --short

  amend = commit --amend
  conflicts = diff --name-only --diff-filter=U
  uncommit = reset --soft HEAD^
  unstage = reset HEAD

  cb = rev-parse --symbolic-full-name --abbrev-ref HEAD
  gp = !git push --set-upstream origin HEAD:$(git cb)
  gup = !git fetch --prune origin && git rebase --rebase-merges origin/$(git cb)

[merge]
  tool = vimdiff

[init]
  defaultBranch = main
